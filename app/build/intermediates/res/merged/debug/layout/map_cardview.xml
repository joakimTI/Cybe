<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_margin="5dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/ranger_image"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ranger_image"
            android:id="@+id/ranger_name"
            android:layout_alignParentTop="true"
            android:text="Joakim Tipape"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ranger_name"
            android:id="@+id/ranger_id"
            android:text="cs 282-3736/2013"
            android:layout_toRightOf="@+id/ranger_image"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
